<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.locotor.kanpm.mappers.UserMapper">

    <resultMap id="UserResultMap" type="com.locotor.kanpm.model.entities.User">
        <id column="id" property="id" />
        <result column="user_name" property="username" />
        <result column="email" property="email" />
        <result column="password" property="password" />
        <result column="alias" property="alias" />
    </resultMap>

    <select id="getById" resultMap="UserResultMap">
        select * from user where id = #{id}
    </select>
    <select id="getByUsername" resultMap="UserResultMap">
        select * from user where user_name = #{username}
    </select>
    <select id="getByUsernameOrEmail" resultMap="UserResultMap">
        SELECT * FROM user
        WHERE user_name = #{userNameOrEmail} OR email = #{userNameOrEmail} 
        LIMIT 1;
    </select>
    <insert id="insert" parameterType="com.locotor.kanpm.model.entities.User">
        INSERT INTO user(id,
                      user_name,
                      password)
        VALUES(#{id},
            #{username},
            #{password});
    </insert>

</mapper>